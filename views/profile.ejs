<%- include('templates/header') %>

<div class="row justify-content-center">
  <div class="col-md-8 col-lg-6">
    <div class="card shadow-sm mb-4">
      <div class="card-body">
        <h2 class="h5 mb-3">Your Profile</h2>

        <div class="d-flex align-items-center gap-3 mb-3">
          <img src="<%= me?.profile_image || 'https://via.placeholder.com/80' %>"
               class="rounded" width="80" height="80" alt="avatar">
          <div>
            <div><strong><%= me?.display_name %></strong></div>
            <div class="text-muted"><%= me?.email %></div>
          </div>
        </div>

        <hr class="my-3">

        <form action="/profile/avatar" method="POST" enctype="multipart/form-data">
          <div class="mb-3">
            <label class="form-label">Upload new profile picture</label>
            <input type="file" name="avatar"
                   accept="image/png,image/jpeg,image/gif,image/webp"
                   class="form-control" required>
            <div class="form-text">Max 5MB. png, jpg, jpeg, gif, webp.</div>
          </div>
          <button type="submit" class="btn btn-primary">Save</button>
        </form>

      </div>
    </div>
  </div>
</div>

<div class="row justify-content-center">
  <div class="col-md-10 col-lg-9">
    <div class="card shadow-sm">
      <div class="card-body">
        <div class="d-flex align-items-center justify-content-between mb-3">
          <h2 class="h6 mb-0">Your Threads</h2>
          <a href="/createThread" class="btn btn-sm btn-primary">Add new thread</a>
        </div>

        <% if (!myThreads || myThreads.length === 0) { %>
          <div class="alert alert-secondary mb-0">You have not created any threads yet.</div>
        <% } else { %>
          <div class="table-responsive">
            <table class="table align-middle">
              <thead>
                <tr>
                  <th style="width:45%">Thread</th>
                  <th class="text-center" style="width:12%">Comments</th>
                  <th class="text-center" style="width:12%">Likes</th>
                  <th class="text-nowrap" style="width:20%">Last update</th>
                  <th class="text-end" style="width:11%"></th>
                </tr>
              </thead>
              <tbody>
                <% myThreads.forEach(t => { %>
                  <tr>
                    <td>
                      <a href="/thread?threadId=<%= t.thread_id %>" class="text-decoration-none">
                        <strong><%= t.title %></strong>
                      </a>
                    </td>
                    <td class="text-center"><%= t.comments_count || 0 %></td>
                    <td class="text-center"><%= t.likes_count || 0 %></td>
                    <td class="text-nowrap">
                      <%= new Date(t.last_activity || t.updated_at || t.created_at).toLocaleString() %>
                    </td>
                    <td class="text-end">
                      <a href="/thread?threadId=<%= t.thread_id %>" class="btn btn-sm btn-outline-primary">
                        Open
                      </a>
                    </td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        <% } %>
      </div>
    </div>
  </div>
</div>

<%- include('templates/footer') %>
