<%- include('templates/header') %>

<div class="row justify-content-center">
  <div class="col-md-8 col-lg-6">
    <div class="card shadow-sm">
      <div class="card-body">
        <h2 class="h5 mb-3">Your Profile</h2>

        <div class="d-flex align-items-center gap-3 mb-3">
          <img src="<%= me?.profile_image || 'https://via.placeholder.com/80' %>"
               class="rounded" width="80" height="80" alt="avatar">
          <div>
            <div><strong><%= me?.display_name %></strong></div>
            <div class="text-muted"><%= me?.email %></div>
          </div>
        </div>

        <hr class="my-3">

        <form action="/profile/avatar" method="POST" enctype="multipart/form-data">
          <div class="mb-3">
            <label class="form-label">Upload new profile picture</label>
            <input type="file" name="avatar" accept="image/png,image/jpeg,image/gif,image/webp" class="form-control" required>
            <div class="form-text">Max 5MB. png, jpg, jpeg, gif, webp.</div>
          </div>
          <button type="submit" class="btn btn-primary">Save</button>
        </form>

      </div>
    </div>
  </div>
</div>

<%- include('templates/footer') %>
