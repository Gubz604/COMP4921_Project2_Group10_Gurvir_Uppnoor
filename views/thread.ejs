<%- include('templates/header') %>

    <div class="row justify-content-center">
        <div class="col-lg-9">
            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center justify-content-between mb-3">
                        <div class="d-flex align-items-center gap-3">
                            <img src="<%= thread.profile_image || 'https://via.placeholder.com/40' %>"
                                alt="owner avatar" class="rounded" width="40" height="40">
                            <h2 class="mb-0">
                                <%= thread.title %>
                            </h2>
                        </div>
                        <div class="d-flex gap-2">
                            <a href="/home" class="btn btn-secondary">Home</a>
                            <a href="/createThread" class="btn btn-outline-primary">New Thread</a>
                        </div>
                    </div>

                    <div class="d-flex align-items-center text-muted mb-3 gap-3">
                        <span>by <strong>
                                <%= thread.owner_name %>
                            </strong></span>
                        <span>
                            <%= new Date(thread.created_at).toLocaleString() %>
                        </span>
                        <button type="button"
                            class="btn btn-sm <%= thread.liked_by_me ? 'btn-primary' : 'btn-outline-primary' %>"
                            id="thread-like-btn" data-liked="<%= thread.liked_by_me ? '1' : '0' %>"
                            data-id="<%= thread.thread_id %>">
                            â™¥ <span class="thread-like-text">
                                <%= thread.liked_by_me ? 'Unlike' : 'Like' %>
                            </span>
                            (<span id="thread-like-count">
                                <%= thread.likes_count %>
                            </span>)
                        </button>
                    </div>

                    <div class="mb-4">
                        <p class="thread-body">
                            <%= thread.body.trim() %>
                        </p>
                    </div>

                    <div class="d-flex gap-2 mb-4">
                        <button type="button" id="showCommentBox" class="btn btn-primary">Comment</button>
                    </div>

                    <!-- Top-level comment box -->
                    <div id="commentBox" class="card card-body mb-4" style="display:none;">
                        <form action="/thread/<%= thread.thread_id %>/comment" method="POST">
                            <!-- empty => treated as NULL on the server -->
                            <input type="hidden" name="parent_comment_id" value="">
                            <div class="mb-3">
                                <label for="commentBody" class="form-label">Add a comment</label>
                                <textarea id="commentBody" name="body" class="form-control" rows="4"
                                    placeholder="What are your thoughts?" required></textarea>
                            </div>
                            <div class="d-flex gap-2">
                                <button type="submit" class="btn btn-primary">Post</button>
                                <button type="button" id="cancelComment" class="btn btn-light">Cancel</button>
                            </div>
                        </form>
                    </div>

                    <hr>
                    <h4 class="mt-4 mb-3">Comments</h4>
                    <% if (!comments || comments.length===0) { %>
                        <p class="text-muted">No comments yet. Be the first to say something!</p>
                        <% } else { %>
                            <ul class="list-group comment-list">
                                <%- include('partials/comment-item', { nodes: comments, threadId: thread.thread_id,
                                    level: 0, me, threadOwnerId: thread.owner_id }) %>
                            </ul>

                            <% } %>
                </div>
            </div>
        </div>
    </div>

    <script>
        (function () {
            const btn = document.getElementById('showCommentBox');
            const box = document.getElementById('commentBox');
            const cancel = document.getElementById('cancelComment');
            if (btn) btn.addEventListener('click', () => box.style.display = 'block');
            if (cancel) cancel.addEventListener('click', () => box.style.display = 'none');

            // Toggle per-comment reply form that uses Bootstrap's d-none
            document.addEventListener('click', (e) => {
                const t = e.target.closest('[data-action="toggle-reply"]');
                if (!t) return;

                const id = t.dataset.id;
                const form = document.getElementById('reply-form-' + id);
                if (!form) return;

                form.classList.toggle('d-none');               // <-- toggle the class
                if (!form.classList.contains('d-none')) {
                    form.querySelector('textarea')?.focus();
                }
            });

            // THREAD LIKE
            const tBtn = document.getElementById('thread-like-btn');
            if (tBtn) {
                tBtn.addEventListener('click', async () => {
                    const id = tBtn.dataset.id;
                    const liked = tBtn.dataset.liked === '1';
                    const action = liked ? 'unlike' : 'like';
                    const res = await fetch(`/thread/${id}/like`, {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ action })
                    });
                    const data = await res.json();
                    if (!data.ok) return;
                    document.getElementById('thread-like-count').textContent = data.likesCount;
                    tBtn.dataset.liked = liked ? '0' : '1';
                    tBtn.classList.toggle('btn-outline-primary');
                    tBtn.classList.toggle('btn-primary');
                    tBtn.querySelector('.thread-like-text').textContent = liked ? 'Like' : 'Unlike';
                });
            }

            // COMMENT LIKE
            document.addEventListener('click', async (e) => {
                const btn = e.target.closest('.comment-like-btn');
                if (!btn) return;
                const id = btn.dataset.id;
                const liked = btn.dataset.liked === '1';
                const action = liked ? 'unlike' : 'like';

                const res = await fetch(`/comment/${id}/like`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ action })
                });
                const data = await res.json();
                if (!data.ok) return;

                document.getElementById(`comment-like-${id}`).textContent = data.likesCount;
                btn.dataset.liked = liked ? '0' : '1';
                btn.classList.toggle('btn-outline-primary');
                btn.classList.toggle('btn-primary');
                btn.querySelector('.comment-like-text').textContent = liked ? 'Like' : 'Unlike';
            });

            // Toggle edit form
            document.addEventListener('click', (e) => {
                const editBtn = e.target.closest('.comment-edit-btn');
                if (!editBtn) return;
                const id = editBtn.dataset.id;
                const form = document.getElementById('edit-form-' + id);
                if (form) form.classList.toggle('d-none');
            });

            // Cancel edit
            document.addEventListener('click', (e) => {
                const cancelBtn = e.target.closest('.comment-edit-cancel');
                if (!cancelBtn) return;
                const id = cancelBtn.dataset.id;
                const form = document.getElementById('edit-form-' + id);
                if (form) form.classList.add('d-none');
            });

            // Submit edit
            document.addEventListener('submit', async (e) => {
                const form = e.target.closest('.comment-edit-form');
                if (!form) return;
                e.preventDefault();
                const id = form.dataset.id;
                const body = form.querySelector('textarea').value.trim();
                if (!body) return;

                const res = await fetch(`/comment/${id}/edit`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ body })
                });
                const data = await res.json();
                if (!data.ok) return;

                // Update the comment text inline
                const li = document.querySelector(`li[data-comment-id="${id}"]`);
                if (li) {
                    const p = li.querySelector('p.mt-2.mb-2');
                    if (p) p.textContent = data.body;
                    const timeSpan = li.querySelector('span.text-muted');
                    if (timeSpan && !timeSpan.textContent.includes('(edited)')) {
                        timeSpan.innerHTML = timeSpan.innerHTML + ' <em>(edited)</em>';
                    }
                }
                form.classList.add('d-none');
            });

            // DELETE comment (soft)
            document.addEventListener('click', async (e) => {
                const btn = e.target.closest('.comment-delete-btn');
                if (!btn) return;
                const id = btn.dataset.id;

                const res = await fetch(`/comment/${id}/delete`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' }
                });
                const data = await res.json();
                if (!data.ok) return;

                const li = document.querySelector(`li[data-comment-id="${id}"]`);
                if (!li) return;

                // mask author + body
                const nameStrong = li.querySelector('strong');
                if (nameStrong) nameStrong.textContent = 'deleted';
                const p = li.querySelector('p.mt-2.mb-2');
                if (p) p.textContent = '[deleted]';

                // remove action buttons and show (deleted)
                li.querySelectorAll('.comment-like-btn, [data-action="toggle-reply"], .comment-edit-btn, .comment-delete-btn')
                    .forEach(el => el.closest('button') ? el.closest('button').remove() : el.remove());

                const badge = document.createElement('span');
                badge.className = 'text-muted fst-italic ms-2';
                badge.textContent = '(deleted)';
                const header = li.querySelector('.d-flex.justify-content-between.align-items-start > div');
                if (header) header.appendChild(badge);
            });

        })();
    </script>

    <%- include('templates/footer') %>