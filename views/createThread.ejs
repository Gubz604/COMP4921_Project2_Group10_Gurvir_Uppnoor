<%- include('templates/header') %>
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm p-4">
                <h2 class="mb-3">Create Thread</h2>
                <form action="/submitThread" method="POST" novalidate>
                    <div class="mb-3">
                        <label for="title" class="form-label">Title</label>
                        <input type="text" id="title" name="title" class="form-control" required>
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea id="description" name="description" rows="8" class="form-control"
                            placeholder="Write your description..." required></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Create Thread</button>
                    <a href="/home" class="btn btn-secondary ms-2">Back to Home</a>
                </form>
            </div>
        </div>
    </div>
    <%- include('templates/footer') %>